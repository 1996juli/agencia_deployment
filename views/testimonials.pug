extends ./layout/index

block contenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{page}

        include ./layout/testimonialsBlock

        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega Testimonial

                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje

                .row.justify-content-center.col 
                    .col-md-8 
                        form(action="/testimonials" method="POST")
                            .form-group 
                                label(for="name") Nombre 
                                input#nombre(type="text", placeholder="Tu nombre", name="name", class="form-control" value=name)
                            .form-group 
                                label(for="email") Email
                                input#correo(type="text", placeholder="Tu email", name="email", class="form-control" value=email)
                            .form-group 
                                label(for="message") Mensaje
                                textarea#mensaje(class="form-control", name="message", placeholder="Tu mensaje", rows=3)= message
                            
                            input.btn.btn-success.btn-block(type="submit")
